<h2>Class List</h2>


<div class="container">
    <p>Helloo </p>

</div>

<style>
    tr:hover{background-color:#f5f5f5;}
</style>

<table class="table" id="classTable" sstyle="width: 60%">
    <thead>
        <tr>
            <th>Class Date</th>
            <th>Class Time</th>
            <th>Class Name</th>
            <th>Instructor Name</th>
            <th>GIAG Price</th>
            <th>Location</th>
           
            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassDate.ToString("dd/MM/yyyy")</td>
                <td>@item.ClassTime</td>
                <td>@item.ClubName</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.ClassGIAGPrice</td>
                <td>
                    @item.VenueName, 
                    <br />
                    @item.AddressLine1,
                    <br />
                    @item.AddressLine2,
                    <br />
                    @item.Postcode
                </td>
                
                <td>
                    <a class="btn btn-primary btn-sm" onclick="BookClass('@Url.Action("AddBooking", "Customer", new { id = @item.ClassID})')"><i class="fa fa-plus"></i> Book</a>

                </td>
            </tr>

        }

    </tbody>
</table>


