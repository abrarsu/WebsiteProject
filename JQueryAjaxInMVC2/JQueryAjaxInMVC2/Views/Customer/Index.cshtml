<h2>Class List</h2>


<div class="container">
    <p>Helloo </p>

</div>

<style>
    tr:hover{background-color:#f5f5f5;}
</style>

<table id="classTable" class="table  table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Class Date</th>
            <th>Class Time</th>
            <th>Class Name</th>
            <th>Instructor Name</th>
            <th>GIAG Price</th>
            <th>Location</th>
           
            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassDate.ToString("dd/MM/yyyy")</td>
                <td>@item.ClassTime</td>
                <td>@item.ClubName</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.ClassGIAGPrice</td>
                <td>
                    @item.VenueName, 
                    <br />
                    @item.AddressLine1,
                    <br />
                    @item.AddressLine2,
                    <br />
                    @item.Postcode
                </td>
                
                <td>
                    @*<a class="btn btn-info btn-sm" data-toggle="modal" data-target=".bootstapmodal-@item.ClubID))" ><i class="fa fa-info"></i> Club Information</a>*@
                    @*<a class="btn btn-info btn-sm" ></a>*@
                    <a class="btn btn-primary btn-sm" onclick="BookClass('@Url.Action("AddBooking", "Customer", new { id = @item.ClassID})')"><i class="fa fa-plus"></i> Book</a>
                </td>
            </tr>

        }

    </tbody>
</table>


@foreach (var club in Model)
{
    <div class="modal fade bootstapmodal">
        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dissmiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    <div class="modal-title"><h2>Club Information</h2></div>

                </div>

                <div class="modal-body">
                    <p>@club.ClubName</p>
                    <p>@club.ClubDescription</p>
                    <p>@club.ClubMembership</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dissmiss="modal">Close</button>
                </div>

            </div>

        </div>

    </div>

}






