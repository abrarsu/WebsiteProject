@model JQueryAjaxInMVC2.Models.CustomerViewModel
@{
    ViewBag.Title = "customerLogin";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<br />
<h3 class="text-center">Login Here</h3>

@using (Html.BeginForm())
{

   @Html.ValidationSummary(true, "Login failed. Check your login details.", new { @class = "text-danger" })
    <div class="container" style="margin-top:2%">
        <div class="col-md-4 col-md-offset-4 alert alert-warning">
            <form id="loginForm">

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(u => u.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Username" } })
                    </div>
                    @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.EditorFor(u => u.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Password", Type = "password" } })
                    </div>
                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })

                </div>
            </form>
                <div class="form-group">
                    <button class="btn btn-warning form-control" type="submit"><i class="glyphicon glyphicon-log-in"></i> Login</button>
                </div>
        </div>
   </div>
}


