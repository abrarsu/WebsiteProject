@model JQueryAjaxInMVC2.Models.InstructorPassword
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login failed. Check your login details.")

    <div class="form-horizontal">
 
            <div class="form-group">
                @Html.LabelFor(u => u.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(u => u.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Username" } })
                    @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(u => u.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Password", Type = "password" } })
                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>

    </div>
}
